<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../layouts/head') %> 
    <title>Log in</title>
</head>
<body style="margin: 1em;">
    <form method="POST">
        <%  if (messages.error) {
            const passportMessage = messages.error[0];
            let textMessage = '';
            
            if (passportMessage === '1') {
                textMessage = 'Database error';
            }
            if (passportMessage === '2') {
                textMessage = 'Password is incorrect';
            }
            if (passportMessage === '3') {
                textMessage = 'This email has not been registered yet';
            } %> 
            <div class="alert alert-warning"><%= textMessage %></div> 
        <% } %>
        <div class="mb-3">
            <label for="emailInput" class="form-label">Email address</label>
            <input type="email" class="form-control" id="emailInput" name="email">
        </div>
        <div class="mb-3">
            <label for="passwordInput" class="form-label">Password</label>
            <input type="password" class="form-control" id="passwordInput" name="password">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <button style="width: 100%;" type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </form>
</body>
</html>

